{
  "manifest_version": 3,
  "name": "Azure DevOps Tasks Updater",
  "version": "1.0",
  "description": "Atualiza tasks filhas no Azure DevOps",
  "content_scripts": [
    {
      "matches": [
        "*://dev.azure.com/*",
        "*://*.visualstudio.com/*"
      ],
      "type": "module",
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/module_manager.mjs",
        "scripts/model/api_links.mjs",
        "scripts/model/api_azure.mjs",
        "scripts/model/requests.mjs",
        "scripts/view/modal.mjs"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "/scripts/view/html/popup.html",
    "default_encoding": "UTF-8",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://*.visualstudio.com/*"
  ]
}